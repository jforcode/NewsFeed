<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/li_home_news"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_category"
            android:text="Business"
            android:textStyle="italic"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginTop="@dimen/general_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_bookmark"
            android:src="@drawable/star_filled"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/general_margin"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/txt_title"
            android:text="Some dummy title!"
            android:textColor="@android:color/primary_text_light"
            android:layout_below="@id/txt_category"
            android:layout_toLeftOf="@id/img_bookmark"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_publisher"
            android:text="Amazon.com"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@id/txt_title"
            android:layout_toLeftOf="@id/img_bookmark"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_timestamp"
            android:layout_marginRight="@dimen/general_margin"
            android:layout_marginBottom="@dimen/general_margin"
            android:layout_marginTop="@dimen/general_margin"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_below="@id/txt_publisher"
            android:layout_alignParentRight="true"
            android:text="July 23, 2017"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_share"
            android:text="Share"
            android:textSize="12sp"
            android:layout_below="@id/txt_publisher"
            android:layout_marginTop="@dimen/general_margin"
            android:layout_marginBottom="@dimen/general_margin"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>